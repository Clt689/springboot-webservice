{{>layout/header}}

<h1>게시글 등록</h1>

<div class="header">
    <div class="col-md-12">
        <div class="col-md-4">
            <form action="/api/v1/posts" method="post" enctype="multipart/form-data">
                <div class="form-group" style="display: none">
                    <label for="uuid">UUID</label>
                    <input type="text" class="form-control" id="uuid" value="{{uuidValue}}" readonly>
                </div>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
                </div>
                <div class="form-group">
                    <label for="author">작성자</label>
                    <input type="text" class="form-control" id="author" value="{{loginUserName}}" readonly>
                </div>
                <div class="form-group">
                    <label for="content">내용</label>
                    <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
                </div>
                <div class="form-group">
                    <label for="image">이미지 첨부</label>
                    <input type="file" id="image" name="image">
                </div>
            </form>
        </div>
    </div>
</div>

{{>layout/footer}}
