{{>layout/header}}

<div class="header">
    {{#write}}
        <a href="/posts_notice/save" role="button"
           class="btn float-right btn-primary">글 등록</a>
    {{/write}}
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#resultList}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/resultList}}
        </tbody>
    </table>
    {{#arr}}
        <tr>
            <a href = "/notice?page={{.}}">{{.}}</a>
        </tr>
    {{/arr}}
</div>

{{>layout/footer_notice}}