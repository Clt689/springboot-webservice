{{>layout/header}}

<style>
    .custom-col {
        margin-bottom: 150px;
        margin-right: 10px; /* Adjust the right margin value as needed */
    }

    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>


<div class="header">
    <div class="center">
        <form action="/posts/search" method="GET" class="form-inline p-2 bd-highlight" role="search">
            <input type="text" name="keyword" class="form-control" id="search" placeholder="검색" style="width: 300px">
            <button class="btn btn-success bi bi-search">검색</button>
        </form>
    </div>

    <div class="col-md-12">
        <div class="row" style="float: right; margin: 15px;">
            <a href="/posts/save" role="button" class="btn float-right btn-primary">글 등록</a>
        </div>
    </div>

    <!-- 분실물 게시판 출력-->
    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {{#posts}}
                    <div class="col-md-4"> <!-- 수정된 부분 -->
                        <div class="col custom-col">
                            <div class="card shadow-sm" style="width: 300px; height: 350px">
                                <div class="thumbnail" style="width: 300px; height: 200px">
                                        <img src="/images/{{savedFileName}}" width="300px" height="200px">
                                </div>
                                <div class="card-body">
                                    <p class="card-text" style="float: right; color: #6c757d;">{{author}}</p> <br>
                                    <p class="card-text">{{title}}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a class="btn btn-sm btn-outline-secondary" href="/posts/{{id}}">View</a>
                                        </div>
                                        <small class="text-body-secondary">{{modifiedDate}}</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/posts}}
            </div>
        </div>
    </div>


</div>

{{>layout/footer}}